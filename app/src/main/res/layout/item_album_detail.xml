<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:padding="10dp"
    android:background="@drawable/item_bg_shape"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_album_detail_id_tv"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:layout_toLeftOf="@+id/item_album_detail_time_tv"
        android:id="@+id/item_album_detail_title_tv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/item_album_detail_id_tv"
        android:textSize="16sp"
        android:text="我是大标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/item_album_detail_time_tv"
        android:layout_alignParentRight="true"
        android:textSize="16dp"
        android:text="2021-10-03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/item_album_detail_time_tv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/item_album_detail_id_tv"
        android:layout_below="@+id/item_album_detail_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_album_detail_red_count_tv"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:drawableLeft="@mipmap/check_box_unselected"
            android:text="14.4万"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_album_detail_duration_tv"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:drawableLeft="@mipmap/check_box_selected"
            android:layout_marginLeft="20dp"
            android:text="14.4万"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>