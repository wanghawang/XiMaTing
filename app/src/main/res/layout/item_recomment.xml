<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/item_bg_shape"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <ImageView
        android:layout_marginLeft="5dp"
        android:background="@color/main_color"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:id="@+id/recommend_item_icon"
        android:layout_width="68dp"
        android:layout_height="65dp"/>
    <TextView
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/recommend_item_icon"
        android:id="@+id/recommend_item_title"
        android:lines="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="6dp"
        android:layout_marginTop="3dp"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/recommend_item_icon"
        android:id="@+id/recommend_item_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_below="@+id/recommend_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/recommend_item_icon"
        android:layout_alignBottom="@+id/recommend_item_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="100万"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="50集"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</RelativeLayout>